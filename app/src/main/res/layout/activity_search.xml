<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SEARCH INPUT -->
    <EditText
        android:id="@+id/searchInput"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Search products"
        android:padding="12dp"
        android:background="@drawable/input_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/voiceBtn"
        android:layout_margin="12dp"/>

    <!-- VOICE SEARCH -->
    <ImageButton
        android:id="@+id/voiceBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:src="@android:drawable/ic_btn_speak_now"
        app:layout_constraintTop_toTopOf="@id/searchInput"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"/>

    <!-- BARCODE -->
    <ImageButton
        android:id="@+id/barcodeBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintTop_toBottomOf="@id/searchInput"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"/>

    <!-- PRODUCTS LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSearch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/barcodeBtn"
        app:layout_constraintBottom_toTopOf="@id/cartTotalText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CART TOTAL -->
    <TextView
        android:id="@+id/cartTotalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 0 EGP"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- OPEN CART -->
    <Button
        android:id="@+id/openCartBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Cart"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- LOGOUT (SLIM, BOTTOM LEFT) -->
    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Logout"
        android:textSize="12sp"
        android:background="@drawable/btn_secondary"
        android:textColor="@color/primary"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
