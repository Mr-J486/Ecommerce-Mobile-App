<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camera for barcode scanning -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcommerceMobApp">

        <!-- SPLASH (ENTRY POINT) -->
        <activity
            android:name=".ui.onboarding.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AUTH -->
        <activity android:name=".ui.auth.LoginActivity" />
        <activity android:name=".ui.auth.RegisterActivity" />
        <activity android:name=".ui.auth.ForgotPasswordActivity" />

        <!-- SHOPPING -->
        <activity android:name=".search.SearchActivity" />
        <activity android:name=".cart.CartActivity" />
        <activity android:name=".search.BarcodeScannerActivity" />

        Admin
        <activity
            android:name=".admin.ProductListActivity"
            android:exported="false" />
        <activity
            android:name=".admin.AddProductActivity"
            android:exported="false" />
        <activity
            android:name=".admin.AdminEditCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".admin.CategoryListActivity"
            android:exported="false" />
        <activity
            android:name=".admin.AdminAddCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".admin.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
